<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% store_products = @products.where(store_id: params[:store_id]) %>
    <% store_products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.store %></td>
        <td><%= link_to 'Show', product_url(product.store_id, product.id) %></td>
        <td><%= link_to 'Edit', edit_product_url(product.store_id, product.id) %></td>
        <td><%= link_to 'Destroy', product_url(product.store_id, product.id) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path  %>
<% @store = Store.find(params[:store_id]) %>
<%= link_to 'Back to ' + @store.name, store_path(@store) %>
<%= link_to 'Back to All Stores', stores_path%>
<div>
  <%= link_to 'Home', root_path %>
</div>
