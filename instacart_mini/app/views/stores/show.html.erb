<div class="container">
  <div class="row">
    <div class="col-10 mx-auto text-center">
      <table class="mx-auto">
        <tbody>
          <tr>
            <td class="text-center align-middle"><h2><strong><%= @store.name %> - <%= @store.address %></strong></h2></td>
            <td class="text-right align-middle"><%= link_to 'Edit', edit_store_path(@store) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Products</h1>
</div>

<div class="text-center">
  <%= link_to 'Add New Product', new_product_url(@store.id) %>
</div>

<br>

<table class="mx-auto">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products = Product.all %>
    <% store_products = @products.where(store_id: params[:id]) %>
    <% store_products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product_url(product.store_id, product.id) %></td>
        <td><%= link_to 'Edit', edit_product_url(product.store_id, product.id) %></td>
        <td><%= link_to 'Destroy', product_url(product.store_id, product.id) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
  <%= link_to 'Back to All Stores', stores_path%> |
  <%= link_to 'Home', root_path %>
</div>
