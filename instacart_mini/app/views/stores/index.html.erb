<div class="text-center">
  <h1><strong>Stores</strong></h1>
  <p id="notice"><%= notice %></p>
  <%= link_to 'New Store', new_store_path %>
</div>

<br>

<table class="text-center mx-auto">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure? This will also delete all items associated with the store.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
  <%= link_to 'Home', root_path %>
</div>
