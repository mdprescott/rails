<p id="notice"><%= notice %></p>

<h1>Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items = OrderItem.all %>
    <% cart_items = @order_items.where(cart_id: params[:cart_id]) %>
    <% cart_items.each do |order_item| %>
      <tr>
        <td><%= order_item.product.title %></td>
        <td><%= order_item.product.price %></td>
        <td><%= order_item.quantity %></td>
        <td><%= link_to 'Show', order_item_url(order_item.cart_id, order_item.store_id, order_item.id) %></td>
        <td><%= link_to 'Edit', edit_order_item_url(order_item.cart_id, order_item.store_id, order_item.id) %></td>
        <td><%= link_to 'Destroy', order_item_url(order_item.cart_id, order_item.store_id, order_item.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
